<script>
    function getSectionsFromQuestionCount(numberOfQuestions, screenWidth = window.innerWidth, screenHeight = window.innerHeight) {
        // Returns an array of 4 strings -- [top, right, bottom, left] -- each creating an equal representation of time.
        var perimeterTotal = ((screenWidth * 2) + (screenHeight *2));
        var pxPerQuestion = perimeterTotal/numberOfQuestions;
        var widthPercentageOfScreen = screenWidth / perimeterTotal
        var heightPercentageOfScreen = screenHeight / perimeterTotal
        var highestNumberTop = Math.ceil(widthPercentageOfScreen * numberOfQuestions)
        var highestNumberRight = (Math.floor(heightPercentageOfScreen * numberOfQuestions)) + highestNumberTop
        var highestNumberBottom = highestNumberTop + highestNumberRight

        console.log(screenWidth, screenHeight, highestNumberTop, highestNumberRight, highestNumberBottom, numberOfQuestions);
        return pxPerQuestion;

        /*
        ["1 2 3", "4 5", "8 7 6", "9 10"] generates:
        
                1              2              3
                10        0:00:00         4
                9                              5
                8              7              6
        */
    }
    $(document).ready(function () {
        let result = JSON.stringify(getSectionsFromQuestionCount(10))
        $("#test").text(result)
    })
</script>
